<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/activity_poster"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:padding="5dp" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/activity_poster"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/activity_time_sign"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@+id/activity_poster"
        android:layout_below="@+id/activity_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/activity_time" />

    <TextView
        android:id="@+id/activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
         android:layout_below="@+id/activity_title"
        android:layout_toRightOf="@+id/activity_time_sign"
        android:textColor="@color/gray"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/activity_address_sign"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@+id/activity_poster"
        android:layout_below="@+id/activity_time_sign"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/activity_address" />

    <TextView
        android:id="@+id/activity_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/activity_time"
        android:layout_toRightOf="@+id/activity_address_sign"
        android:textColor="@color/gray"
        android:textSize="14sp" />
        <ImageView
        android:id="@+id/activity_type_sign"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@+id/activity_poster"
        android:layout_below="@+id/activity_address_sign"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/activity_type" />

    <TextView
        android:id="@+id/activity_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/activity_address"
        android:layout_toRightOf="@+id/activity_type_sign"
        android:textColor="@color/gray"
        android:textSize="14sp" />

</RelativeLayout>