<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <com.newqiyi.view.CircleImageView
        android:id="@+id/civ_col"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_coltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/civ_col"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/civ_col"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="时间"
        android:textColor="@android:color/darker_gray"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_procol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_col"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:text="项目标题"
        android:textSize="28sp"
        android:textStyle="italic" />

</RelativeLayout>