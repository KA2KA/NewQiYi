<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <EditText
        android:id="@+id/zhuce_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_selector_input"
        android:drawableLeft="@drawable/user_account_icon"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/user_account_icon"
        android:hint="手机号"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/zhuce_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_selector_input"
        android:drawableLeft="@drawable/user_pwd_lock_icon"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/user_pwd_lock_icon"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/zhuce_passtest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_selector_input"
        android:drawableLeft="@drawable/user_pwd_lock_icon"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/user_pwd_lock_icon"
        android:hint="验证密码"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/yanzhengma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.7"
            android:background="@drawable/login_selector_input"
            android:drawablePadding="15dp"
            android:hint="输入验证码"
            android:minHeight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_getVerification"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@android:color/darker_gray"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="#5856D6"
        android:text="注册"
        android:textColor="#FFFFFFFF" />

</LinearLayout>